{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "signaltypes",
  "description": "JSON document describing a list of signaltypes",
  "type": "array",
  "uniqueItems": true,
  "items": {
    "type": "object",
    "properties": {
      "id": {
        "description": "Id of the signaltype",
        "type": "string",
        "pattern": "^(?!.*--)(?:[a-z](?:[a-z-]{0,14}[a-z])?_)?[A-Z0-9]+(?:_[A-Z0-9]+)*$"
      },
      "name": {
        "description": "Name of the signaltype",
        "type": "string"
      },
      "description": {
        "description": "Description of the signaltype",
        "type": "string"
      }
    },
    "required": ["id", "name", "description"],
    "additionalProperties": false
  }
}
