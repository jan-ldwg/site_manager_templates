{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "connectors",
  "description": "JSON document describing a list of connectors",
  "type": "array",
  "uniqueItems": true,
  "items": {
    "type": "object",
    "properties": {
      "id": {
        "description": "Id of the connector",
        "type": "string",
        "pattern": "^[A-Za-z0-9](?:[A-Za-z0-9]|[_.](?=[A-Za-z0-9]))*_(?:f|m|h)$"
      },
      "name": {
        "description": "Name of the connector",
        "type": "string"
      },
      "gender": {
        "description": "Gender of the connector",
        "enum": ["MALE", "FEMALE", "HERMA"]
      },
      "icon": {
        "description": "Icon for use with this connector. These can be fetched as SVG icons from /icons/{id}.svg",
        "type": "string",
        "pattern": "^[A-Za-z0-9](?:[A-Za-z0-9]|[_.](?=[A-Za-z0-9]))*_(?:f|m|h)$"
      },
      "compatibleConnectors": {
        "description": "List of connectors that can mate with this connector",
        "type": "array",
        "uniqueItems": true,
        "items": {
          "type": "string",
          "pattern": "^[A-Za-z0-9](?:[A-Za-z0-9]|[_.](?=[A-Za-z0-9]))*_(?:f|m|h)$"
        }
      }
    },
    "required": ["id", "name", "gender", "icon", "compatibleConnectors"],
    "additionalProperties": false
  }
}
